<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>XCodersTimeEventManager</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>CalendarPageFilter</filter-name>
    <filter-class>com.xcoders.filters.CalendarPageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CalendarPageFilter</filter-name>
    <url-pattern>/calendar.jsp</url-pattern>
  </filter-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>res1</web-resource-name>
      <url-pattern>/settings.jsp</url-pattern>
      <url-pattern>/calendar.jsp</url-pattern>
      <url-pattern>/index.jsp</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>1</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/index.jsp?login=r</form-login-page>
      <form-error-page>/index.jsp?login=fail</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <role-name>1</role-name>
  </security-role>
</web-app>